<?php



$products = Mage::getModel('catalog/product')->getCollection();

//Magento does not load all attributes by default

$products->addAttributeToSelect('product_type');

$products->addAttributeToSelect('name');

$products->addAttributeToFilter('status', array('eq' => 1));
$products->addAttributeToFilter('home_featured',1);

foreach($products as $product){

$product_type=$product->getResource()->getAttribute('product_type')->getFrontend()->getValue($product);

$product_id=$product->getId();

break;

}


Mage::register('product_type', $product_type);

Mage::register('product_id', $product_id);



?>

<?php

switch($product_type){



case White:

   ?><link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/styles_green.css'); ?>" media="all" /><?php

   $image_url='logo_green.png';

   break;

case Rose:

   ?><!--<link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/styles_black.css'); ?>" media="all" />-->
   <link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/styles_rose.css'); ?>" media="all" />
   <?php

    //$image_url='logo_black.png';
    $image_url='logo_rose.png';
   break;



   case Red:

   ?><link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/styles_red.css'); ?>" media="all" /><?php

    $image_url='logo_red.png';

   break;

case Champagne:

    ?><link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/styles_orange.css'); ?>" media="all" /><?php

	 $image_url='logo_orange.png';

   break;



   default:

  ?><link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/styles_green.css'); ?>" media="all" /><?php

   $image_url='logo_green.png';

   break;







}



 ?>



