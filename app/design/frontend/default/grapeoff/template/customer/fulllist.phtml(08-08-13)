                        ->joinField(
                                    'qty',
                                    'cataloginventory/stock_item',
                                    'qty',
                                    'product_id=entity_id',
                                    '{{table}}.stock_id=1',
                                    'left'
                                )
                       ->addAttributeToFilter('qty', array('gt' => 0))
                       
    		        ->addCategoryFilter($_featcategory); //feature category to list first
