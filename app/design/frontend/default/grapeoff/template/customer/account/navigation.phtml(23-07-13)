$query = "SELECT typecust from customer_entity where email='".$getmail."'";

$res = Mage::getSingleton('core/resource')->getConnection('core_read')->fetchRow($query);

$custid=Mage::getSingleton('customer/session')->getCustomer()->getId();

$query_alert = "SELECT count(*) as tot from grapeoff_alerts where cutomer_id='".$custid."'";

$res_alert = Mage::getSingleton('core/resource')->getConnection('core_read')->fetchRow($query_alert);

?>

<div class="block block-account">

    <div class="block-title">

        <strong><span><?php echo $this->__('My Account'); ?></span></strong>

    </div>

    <div class="block-content">

        <ul>

            <?php $_links = $this->getLinks(); ?>

            <?php $_index = 1; ?>

            <?php $_count = count($_links); ?>

            <?php foreach ($_links as $_link): ?>

                <?php $_last = ($_index++ >= $_count); ?>

                <?php if ($this->isActive($_link)): ?>

                    <li class="current<?php echo ($_last ? ' last' : '') ?>"><strong><?php echo $_link->getLabel() ?></strong></li>

                <?php else: ?>

                    <?php if($res['typecust']==1) { ?>

		<?php if(($_link->getLabel()!='My Wishlist') && ($_link->getLabel()!='My Orders')) { ?>

                    <li<?php //echo ($_last ? ' class="last"' : '') ?>><a href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a></li>

		    <?php } } else { ?>

		     <li<?php //echo ($_last ? ' class="last"' : '') ?>><a href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a></li>

		     <?php } ?>

                <?php endif; ?>

            <?php endforeach; ?>



	    <?php if($res_alert['tot']>0) { ?>

		<li><a href="<?php echo $this->getUrl('editalert'); ?>">Create/Modify Alerts</a></li>

	    <?php } else { ?>

		 <li><a href="<?php echo $this->getUrl('alerts'); ?>">Create/Modify Alerts</a></li>

	    <?php } ?>



	    <?php if($res['typecust']==1) { ?>

		<li><a href="<?php echo $this->getUrl('prodadd'); ?>">Add product</a></li>

		<li><a href="<?php echo $this->getUrl('allproduct'); ?>">Posting History</a></li>

		<li><a href="<?php echo $this->getUrl('orderstatus'); ?>">Order Status</a></li>

	    <?php } ?>

            <?php if($customer_type==4){?>
                        <li><a href="<?php echo $this->getUrl('product-fulllist'); ?>">Check Products</a></li>
            <?php } ?>

        </ul>

    </div>

</div>